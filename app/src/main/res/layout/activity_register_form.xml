<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterForm"
        android:background="@color/colorDarkblue">
    <TextView
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewAdminLogin"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.074"
            android:textSize="36sp" android:textStyle="normal|bold" android:textColorLink="@color/colorWhite"
            android:textColor="@color/colorWhite" app:layout_constraintHorizontal_bias="0.498"
            android:fontFamily="sans-serif-condensed-light"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fullname"
            app:layout_constraintTop_toBottomOf="@+id/textViewAdminLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" android:layout_marginEnd="32dp" android:layout_marginStart="32dp"
            android:hint="Full Name" android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorTextLightBlue"
            android:background="@drawable/input_bg" android:paddingLeft="30dp"
            android:paddingTop="10dp" android:paddingBottom="10dp" android:paddingRight="10dp"
            android:backgroundTint="@color/colorLightDarkBlue" android:textColorLink="@color/colorTextLightBlue"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="@+id/hsnumber"
            app:layout_constraintStart_toStartOf="@+id/hsnumber"
            app:layout_constraintTop_toBottomOf="@+id/hsnumber" android:layout_marginTop="16dp"
            android:id="@+id/email" android:hint="Email  " android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorTextLightBlue" android:background="@drawable/input_bg"
            android:paddingLeft="30dp" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:backgroundTint="@color/colorLightDarkBlue"
            android:textColorLink="@color/colorTextLightBlue" android:paddingRight="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/mobnum"
            app:layout_constraintEnd_toEndOf="@+id/fullname"
            app:layout_constraintStart_toStartOf="@+id/fullname"
            app:layout_constraintTop_toBottomOf="@+id/fullname" android:layout_marginTop="16dp"
            android:hint="Mobile Number" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorTextLightBlue" android:background="@drawable/input_bg"
            android:paddingLeft="30dp" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:backgroundTint="@color/colorLightDarkBlue"
            android:textColorLink="@color/colorTextLightBlue" android:paddingRight="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/hsnumber"
            app:layout_constraintStart_toStartOf="@+id/mobnum"
            app:layout_constraintTop_toBottomOf="@+id/mobnum"
            app:layout_constraintEnd_toEndOf="@+id/mobnum"
            android:layout_marginTop="16dp" android:hint="House No." android:textColorHint="@color/colorTextLightBlue"
            android:textColor="@color/colorWhite" android:background="@drawable/input_bg"
            android:paddingLeft="30dp"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:backgroundTint="@color/colorLightDarkBlue" android:textColorLink="@color/colorTextLightBlue"
            android:paddingRight="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/repassword"
            app:layout_constraintEnd_toEndOf="@+id/password"
            app:layout_constraintStart_toStartOf="@+id/password"
            app:layout_constraintTop_toBottomOf="@+id/password" android:layout_marginTop="16dp"
            android:hint="Confirm Password" android:textColorHint="@color/colorTextLightBlue"
            android:textColor="@color/colorWhite"
            android:background="@drawable/input_bg" android:paddingLeft="30dp" android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:backgroundTint="@color/colorLightDarkBlue" android:textColorLink="@color/colorTextLightBlue"
            android:paddingRight="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintEnd_toEndOf="@+id/email" app:layout_constraintStart_toStartOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/email" android:layout_marginTop="16dp"
            android:hint="Password" android:textColorHint="@color/colorTextLightBlue"
            android:textColor="@color/colorWhite"
            android:background="@drawable/input_bg" android:paddingLeft="30dp" android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:backgroundTint="@color/colorLightDarkBlue" android:textColorLink="@color/colorTextLightBlue"
            android:paddingRight="10dp"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btnRegister"
            app:layout_constraintEnd_toEndOf="@+id/repassword"
            app:layout_constraintStart_toStartOf="@+id/repassword"
            app:layout_constraintTop_toBottomOf="@+id/repassword" android:layout_marginTop="32dp"
            android:textColor="@color/colorDarkblue" android:background="@drawable/button_bg"
            android:fontFamily="sans-serif" android:drawableTint="@color/colorGreen" app:iconTint="#753030"
            android:backgroundTint="#6C4646"/>
    <TextView
            android:text="Already Have an Account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/AlreadyHaveAccount"
            app:layout_constraintStart_toStartOf="@+id/btnRegister"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister" app:layout_constraintEnd_toEndOf="@+id/btnRegister"
            android:layout_marginTop="24dp" android:textColor="@color/colorGreen"
            app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>



