<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".managerReport"
        android:background="@color/colorDarkblue">

    <TextView
            android:text="Generate report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView45"
            android:textSize="36sp" android:textStyle="normal|bold" android:textColorLink="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-condensed-light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.028"/>
    <Spinner
            android:layout_width="295dp"
            android:layout_height="48dp" android:id="@+id/spinner2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.218"
            app:layout_constraintHorizontal_bias="0.131"/>
    <TextView
            android:text="Select start date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_marginEnd="290dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/btnStartdate"
            android:textColor="@color/colorWhite"/>
    <TextView
            android:text="Select type of service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginEnd="255dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner2" android:textColor="@color/colorWhite"/>
    <TextView
            android:text="Select end date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:layout_marginEnd="292dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/btnStartdate"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/btnEnddate"
            android:textColor="@color/colorWhite"/>
    <Button
            android:text="Download Report"
            android:layout_width="213dp"
            android:layout_height="56dp" android:id="@+id/btnDownloadreport"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891"/>
    <Button
            android:text="Button"
            android:layout_width="287dp"
            android:layout_height="49dp" android:id="@+id/btnStartdate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.442"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            android:onClick="openDatePicker"/>
    <Button
            android:text="Button"
            android:layout_width="291dp"
            android:layout_height="48dp" android:id="@+id/btnEnddate"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.148" app:layout_constraintVertical_bias="0.624"
            android:onClick="openDatePicker2"/>
</androidx.constraintlayout.widget.ConstraintLayout>