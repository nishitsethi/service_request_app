<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".homeAdmin"
        android:background="@color/colorDarkblue" android:id="@+id/textViewadminhome">

    <Button
            android:text="Plumbing"
            android:layout_width="153dp"
            android:layout_height="66dp" android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.891" app:layout_constraintVertical_bias="0.217"
            android:background="@drawable/input_bg"/>
    <TextView
            android:text="Admin Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.028"
            android:textSize="36sp" android:textStyle="normal|bold" android:textColorLink="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-condensed-light" android:id="@+id/tvTotal"/>
    <Button
            android:text="Electrical "
            android:layout_width="153dp"
            android:layout_height="66dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.493" app:layout_constraintVertical_bias="0.216"
            android:background="@drawable/input_bg"/>
    <Button
            android:text="Gardening"
            android:layout_width="153dp"
            android:layout_height="66dp" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginBottom="320dp" app:layout_constraintTop_toBottomOf="@+id/tvTotal"
            app:layout_constraintVertical_bias="1.0" android:background="@drawable/input_bg"/>
    <Button
            android:text="Carpentry "
            android:layout_width="153dp"
            android:layout_height="66dp" android:id="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.891" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.404"
            android:background="@drawable/input_bg"/>
    <Button
            android:text="Manager Report"
            android:layout_width="342dp"
            android:layout_height="62dp" android:id="@+id/button5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.592" android:background="@drawable/input_bg"
    />

</androidx.constraintlayout.widget.ConstraintLayout>