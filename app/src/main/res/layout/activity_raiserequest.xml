<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Raiserequest"
        android:background="@color/colorDarkblue">

    <TextView
            android:text="@string/raise_a_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="36sp" android:textStyle="normal|bold" android:textColorLink="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-condensed-light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtNameRaiseRequest" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.142"/>
    <Spinner
            android:id="@+id/spinner1"
            android:layout_width="309dp"
            android:layout_height="54dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:contextClickable="false"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/txtNameRaiseRequest" app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintVertical_bias="0.406"/>
    <EditText
            android:layout_width="299dp"
            android:layout_height="146dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextTextMultiLine"
            android:textColor="@color/black" android:drawableTint="#801F1F"
            android:backgroundTint="#F3EFEF" android:background="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddressRaiseRequest"
            app:layout_constraintVertical_bias="0.245"
            android:hint="Describe your request here"/>
    <Button
            android:text="Submit"
            android:layout_width="234dp"
            android:layout_height="52dp" android:id="@+id/btnSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/button_bg"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="62dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNameRaiseRequest"
            android:hint="Name" android:textColorHint="@color/colorTextLightBlue"
            android:textColor="@color/colorWhite" android:background="@drawable/input_bg"
            android:paddingStart="30dp"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:backgroundTint="@color/colorLightDarkBlue" android:textColorLink="@color/colorTextLightBlue"
            android:paddingEnd="10dp" app:layout_constraintStart_toStartOf="@+id/txtMobNumRaiseRequest"
            app:layout_constraintEnd_toEndOf="@+id/txtMobNumRaiseRequest" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.246"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="62dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtMobNumRaiseRequest"
            app:layout_constraintBottom_toTopOf="@+id/txtAddressRaiseRequest"
            android:hint="@string/mobile_number"
            android:textColorHint="@color/colorTextLightBlue"
            android:textColor="@color/colorWhite" android:background="@drawable/input_bg"
            android:paddingStart="30dp"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:backgroundTint="@color/colorLightDarkBlue" android:textColorLink="@color/colorTextLightBlue"
            android:paddingEnd="10dp"
            app:layout_constraintStart_toStartOf="@+id/txtAddressRaiseRequest"
            app:layout_constraintEnd_toEndOf="@+id/txtAddressRaiseRequest"
            app:layout_constraintHorizontal_bias="0.476" android:layout_marginBottom="16dp"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/txtNameRaiseRequest"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="62dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtAddressRaiseRequest"
            android:hint="Address " android:textColorHint="@color/colorTextLightBlue"
            android:textColor="@color/colorWhite" android:background="@drawable/input_bg"
            android:paddingStart="30dp"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:backgroundTint="@color/colorLightDarkBlue" android:textColorLink="@color/colorTextLightBlue"
            android:paddingEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNameRaiseRequest"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintVertical_bias="0.285"/>


</androidx.constraintlayout.widget.ConstraintLayout>